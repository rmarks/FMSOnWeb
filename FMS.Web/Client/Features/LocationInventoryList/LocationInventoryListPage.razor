@page "/locations/{Id:int}/inventory"
@inject HttpClient Http

<div>
    <h3>Asukoht</h3>

    <h4 class="bg-light p-2 mt-3 mb-5 text-secondary">Filter</h4>

    @if (_inventory == null)
    {
        <p>Loading...</p>
    }
    else
    {
        <ProductDetails Item="@SelectedItem" />

        <div class="grid mb-5">
            @foreach (var item in _inventory.Results)
            {
                <ProductCard Item="@item" OnSelected="HandleProductSelected" />
            }
        </div>

        <div class="d-flex justify-content-center">
            <Pager Result="@_inventory" OnPageChanged="HandlePageChanged" />
        </div>
    }
</div>


@code {
    private PagedResult<LocationInventoryListItemDto> _inventory;
    private int _pageSize = 18;
    private LocationInventoryListItemDto _selectedItem;

    private LocationInventoryListItemDto SelectedItem
    {
        get
        {
            var selectedItem = _selectedItem;
            
            if (selectedItem != null)
            {
                _selectedItem = null;
            }

            return selectedItem;
        }
    }

    [Parameter]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await LoadInventory(1);
    }

    private async Task LoadInventory(int page)
    {
        _inventory = await Http.GetFromJsonAsync<PagedResult<LocationInventoryListItemDto>>($"api/locationinventory/{Id}?page={page}&pagesize={_pageSize}");
    }

    private async Task HandlePageChanged(int page)
    {
        await LoadInventory(page);
    }

    private void HandleProductSelected(LocationInventoryListItemDto item)
    {
        _selectedItem = item;
    }
}
